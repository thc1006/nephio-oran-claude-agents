{
  "id": "cu-001",
  "name": "O-RAN-CU-001",
  "f1_interface": {
    "port": 38472,
    "version": "16.4.0",
    "max_connections": 100
  },
  "e1_interface": {
    "port": 38465,
    "cpup_split": true,
    "bearer_setup": true
  },
  "ngap_interface": {
    "port": 38412,
    "core_endpoints": [
      "amf-service:8080",
      "smf-service:8080",
      "upf-service:8080"
    ],
    "plmn_id": "00101",
    "nr_cgi": "001010000000001"
  },
  "rrc_config": {
    "version": "16.4.0",
    "max_ues": 1000,
    "connection_setup": true,
    "security_enabled": true
  },
  "metrics": {
    "enabled": true,
    "port": 9090,
    "endpoint": "/metrics",
    "interval": 30
  },
  "security": {
    "tls_enabled": true,
    "cert_path": "/certs/cu-cert.pem",
    "key_path": "/certs/cu-key.pem",
    "ca_cert_path": "/certs/ca-cert.pem",
    "mutual_tls": true,
    "jwt_validation": true
  },
  "service_mesh": {
    "istio_enabled": true,
    "tracing_enabled": true,
    "metrics_enabled": true,
    "circuit_breaker": "enabled"
  }
}