# Development Dockerfile for Docusaurus v3
# Optimized for hot reload and development workflow

ARG NODE_VERSION=18
FROM node:${NODE_VERSION}-alpine

# Install development tools
RUN apk add --no-cache \
    git \
    curl \
    bash \
    && rm -rf /var/cache/apk/*

# Create non-root user for development
RUN addgroup -g 1001 -S nodejs && \
    adduser -S docusaurus -u 1001 -G nodejs

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci --silent && \
    npm cache clean --force

# Change ownership of node_modules
RUN chown -R docusaurus:nodejs node_modules

# Switch to non-root user
USER docusaurus

# Copy source code (will be mounted as volume in docker-compose)
COPY --chown=docusaurus:nodejs . .

# Expose development server port
EXPOSE 3000

# Health check for development server
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:3000 || exit 1

# Development server command
CMD ["npm", "start", "--", "--host", "0.0.0.0", "--poll"]